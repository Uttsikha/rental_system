<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="Rooms"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_rooms"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:padding="@dimen/_25ssp"
                    app:srcCompat="@drawable/room" />

                <TextView
                    android:id="@+id/txt_rooms"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rooms"
                    android:textColor="#000080"
                    android:textSize="@dimen/_20ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="Services"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_services"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:padding="@dimen/_25ssp"
                    app:srcCompat="@drawable/services" />

                <TextView
                    android:id="@+id/txt_services"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Services"
                    android:textColor="#000080"
                    android:textSize="@dimen/_20ssp" />

          </LinearLayout>


</TableRow>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="Report"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_report"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:padding="@dimen/_25ssp"
                    app:srcCompat="@drawable/history" />

                <TextView
                    android:id="@+id/txt_report"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Report"
                    android:textColor="#000080"
                    android:textSize="@dimen/_20ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="Settings"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_settings"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:padding="@dimen/_25ssp"
                    app:srcCompat="@drawable/settings" />

                <TextView
                    android:id="@+id/txt_settings"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Settings"
                    android:textColor="#000080"
                    android:textSize="@dimen/_20ssp" />


            </LinearLayout>

        </TableRow>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>
</LinearLayout>